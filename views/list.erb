<h1><%= @list.name() %></h1>

<% if @list.tasks(@list.id()).any?() %>
  <h3>Here are all the tasks in this list:</h3>

  <ul>
    <% @list.tasks(@list.id()).each() do |task| %>
      <li><%= task.description() %> </li>
    <% end %>
  </ul>

  <% else %>
    <p>There are no tasks on this list!</p>
  <% end %>

<div class="container">
  <a href="/"><button class="btn">Home</a>
</div>
